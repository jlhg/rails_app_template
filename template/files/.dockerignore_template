# See https://docs.docker.com/engine/reference/builder/#dockerignore-file for more about ignoring files.

# Ignore git directory
/.git/
/.gitignore
/.gitattributes

# Ignore bundler config
/.bundle

# Ignore all environment files (secrets should use Docker secrets)
/.env*
!/.env.example

# Ignore all default key files
/config/master.key
/config/credentials/*.key

# Ignore all logfiles and tempfiles
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Ignore test files and coverage reports
/test/
/spec/
/coverage/

# Ignore CI service files
/.github

# Ignore Kamal deployment files
/config/deploy*.yml
/.kamal

# Ignore development files
/.devcontainer
.pry_history

# Ignore Docker-related files
/.dockerignore
/Dockerfile*
/compose.yaml
/compose.yml
/compose.*.yaml
/compose.*.yml

# Ignore Docker development files
/.srv/
/.secrets/

# Ignore editor temp files
\#*\#
*~

# Ignore editor directories and files
/.vscode
/.idea
.DS_Store

# Ignore Claude Code (development guide, not needed in production)
/.claude/
/CLAUDE.md

# Ignore development tools configuration
/.rubocop.yml
/.rubocop_todo.yml
/.rspec

# Ignore bundler vendor (rebuilt in image with --deployment)
/vendor/bundle/
